                <Setter Property="Visibility"  Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="WaterMarkTB4" TargetType="{x:Type TextBlock}">
        <Setter Property="Visibility" Value="Hidden"/>
